<div class="right-all col-12 col-md-8 offset-1">
  <h1>おといあわせ</h1>
  <%= form_with(model: @contact, local: true) do |f| %>
    <% if @contact.errors.any? %>
      <% @contact.errors.full_messages.each do |message| %>
        <div>
          <%= message %>
        </div>
      <% end %>
    <% end %>
    <h6 class="mt-3">おなまえ</h6>
    <%= f.text_field :name, class: "nes-input" %><br>
    <h6 class="mt-3">メールアドレス</h6>
    <%= f.email_field :email, autocomplete: "email", class: "nes-input" %><br>
    <h6 class="mt-3">ないよう</h6>
    <%= f.text_area :content, class: "nes-textarea" %><br>
    <div class="mt-3">
      <%= f.submit "おくる", data: {confirm: "おくってよろしいですか？"}, class: "nes-btn is-primary" %>
    </div>
  <% end %>
</div>