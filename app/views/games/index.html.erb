<div class="right-all col-9 offset-1">
  <h3>ゲームをさがす</h3>
  <%= form_tag(search_path, method: :get) do %>
    <%= text_field_tag 'search[content]', "", class: "nes-input" %>
    <%= hidden_field_tag :model, "game" %>
    <%= submit_tag 'Search', class: "nes-btn is-primary" %>
  <% end %>
  <div class="table-box">
    <h3>ゲームいちらん</h3>
    <% @games.each do |game| %>
      <div class="table-item">
        <table class="table">
          <tr>
            <td class="align-middle">
              <%= attachment_image_tag game, :image, size: "160x60"%>
            </td>
            <td class="align-middle">
              <%= game.title %>
            </td>
            <td class="align-middle"> 
              <%= truncate(game.introduction, :length => 20) %>
            </td>
            <td class="align-middle">
              <%= link_to "もっと　くわしく", game_path(game), class: "nes-btn is-warning" %>
            </td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>