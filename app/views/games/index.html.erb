<div class="right-all col-12 col-md-8 offset-1">
  <div class="genre_badge">
    <h1>ゲームをさがす</h1>
    <h5>キーワードけんさく</h5>
    <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag 'search[content]', "", class: "nes-input" %>
      <%= hidden_field_tag :model, "game" %>
      <%= submit_tag 'けんさく', class: "nes-btn is-primary" %>
    <% end %>
    <h5 class="mt-3">ジャンルけんさく</h5>
    <div class="d-flex flex-wrap">
      <% @genres.each do |genre| %>
        <div class="genre-badge">
          <%= link_to genre.name, games_path(id: genre.id) %>
        </div>
      <% end %>
    </div>
  </div>

  <h1 class="mt-4">ゲームたち</h1>
  <div class="d-flex flex-wrap">
    <% @games.each do |game| %>
      <div class="table-item text-center">
        <%= link_to game_path(game) do %>
          <%= attachment_image_tag game.game_images[0], :image, size: "200x100" %>
          <p><%= truncate(game.title, length: 10) %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>