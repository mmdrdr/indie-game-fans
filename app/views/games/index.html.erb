<div class="container">
  <div class="row">
    <div class="col-xs-3">
    </div>
    <div class="col-xs-9">
      <% @games.each do |game| %>
        <%= link_to game_path(game) do %>
          <%= attachment_image_tag game, :image, :fill, 100, 100 %>
          <%= game.title %>
          <%= game.introduction %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>