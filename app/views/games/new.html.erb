<%= form_with model: @game do |f| %>
  <% if @game.errors.any? %>
    <%= @game.errors.count %>件のエラーが発生しました
    <% @game.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title %>
  <%= f.label :introduction, "紹介文" %>
  <%= f.text_area :introduction %>
  <%= f.submit %>
<% end %>