<div class="right-all col-10 col-md-8 offset-1">
  <%= form_with(model: @game, local: true) do |f| %>
    <% if @game.errors.any? %>
      <%= @game.errors.count %>件のエラーがあります
      <% @game.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    <% end %>
    <h4>がぞう</h4>
    <label>
      <%= image_tag "camera.png", size: "500x250", id: "img_prev" %>
      <%= f.attachment_field :game_images_images, multiple: true, id: "post_post_img", class: "image-field" %>
    </label>
    <h4 class="mt-3">タイトル</h4>
    <%= f.text_field :title, class: "nes-input" %>
    <h4 class="mt-3">せつめい</h4>
    <%= f.text_area :introduction, class: "nes-textarea" %>
    <h4 class="mt-3">ジャンル</h4>
    <p>いくつもえらべます。</p>
    <div class="d-flex flex-wrap">
      <% Genre.all.each do |genre| %>
        <div class="mt-3 mr-3">
          <%= f.check_box :genre_ids, { multiple: true, include_hidden: false }, genre[:id] %>
          <%= genre.name %>
        </div>
      <% end %>
    </div>
    <div class="mt-4">
      <%= f.submit "とうろく", class: "nes-btn is-primary float-right" %>
    </div>
  <% end %>
</div>