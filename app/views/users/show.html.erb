<div class="col-xs-10">
  <%= attachment_image_tag @user, :image, :fill, 100, 100 %>
  <%= @user.name %>
  <%= @user.introduction %>
  <% if @user == current_user %>
    <%= link_to "編集", edit_user_path(@user) %>
    <%= link_to "退会", user_path(@user), method: :delete, data: {confirm: "本当に退会してよろしいですか？"} %>
  <% end %>
</div>