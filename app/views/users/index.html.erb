<div class="right-all col-8 offset-1">
  <h1>クリエイターをさがす</h1>
  <%= form_tag(search_path, method: :get) do %>
    <%= text_field_tag 'search[content]', "", class: "nes-input" %>
    <%= hidden_field_tag :model, "user" %>
    <%= submit_tag 'Search', class: "nes-btn is-primary" %>
  <% end %>
  <div class="table-all">
    <h1 class="mt-4">クリエイターたち</h1>
    <% @games.each do |game| %>
      <div class="table-item">
        <table class="table table-borderless">
          <tr>
            <td class="align-middle">
              <%= attachment_image_tag game.user, :image, size: "50x50" %>
            </td>
            <td class="align-middle">
              <%= game.user.name %>
            </td>
            <td class="align-middle">
              <%= truncate(game.user.introduction, :length => 20) %>
            </td>
            <td class="align-middle">
              <%= link_to "もっと　くわしく", user_path(game.user), class: "nes-btn is-warning" %>
            </td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>