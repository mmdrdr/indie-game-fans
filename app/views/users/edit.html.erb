<div class="col-xs-10">
  <%= form_with model: @user do |f| %>
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <%= image_tag "no_image.png", size: "700×350" %>
    <%= f.attachment_field :image %>
    <%= f.label :name, "ユーザーネーム" %>
    <%= f.text_field :name, class: "nes-input" %>
    <%= f.label :introduction, "紹介文" %>
    <%= f.text_area :introduction, rows: "5", class: "nes-textarea" %>
    <%= f.submit %>
  <% end %>
</div>