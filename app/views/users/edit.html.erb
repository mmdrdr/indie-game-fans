<div class="right-all col-12 col-md-8 offset-1">
  <%= form_with(model: @user, local: true) do |f| %>
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <h4>アイコン</h4>
    <label>
      <%= image_tag "camera2.png", size: "100x100", id: "img_prev" %>
      <%= f.attachment_field :image, id: "post_post_img", class: "image-field" %>
    </label>
    <h4 class="mt-3">ユーザーネーム</h4>
    <%= f.text_field :name, class: "nes-input" %>
    <h4 class="mt-3">せつめい</h4>
    <%= f.text_area :introduction, rows: "5", class: "nes-textarea" %>
    <h4 class="mt-3">メールアドレス</h4>
    <p>こうかいはされません。</p>
    <%= f.email_field :email, autocomplete: "email", class: "nes-input" %>
    <div class="mt-3">
      <%= f.submit "こうしん", class: "nes-btn is-primary" %>
    </div>
  <% end %>
</div>